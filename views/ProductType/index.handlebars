<h2>Product Types</h2>
{{#if productTypes}}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>&nbsp;</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
	{{#each productTypes}}
			<tr>
				<td><a href="ProductTypes/{{_id}}">{{productTypeName}}</a></td>
				<td><a class="btn btn-success" href="Products/CreateNew?ptid={{_id}}">Add Instance</a></td>
				<td><a class="btn btn-default" href="ProductType/AddField?ptid={{_id}}">Add Field</a></td>
			</tr>
	{{/each}}
		</tbody>
	</table>
	<a href="ProductType/CreateNew" class="btn btn-default">Create New</a>
{{else}}
<p>No Product Types found - <a href="ProductType/CreateNew">Create A Product Type</a></p>
{{/if}}