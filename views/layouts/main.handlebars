<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>GraphSnap</title>

		<!-- Styles -->
		<link rel="stylesheet" href="/css/normalize.css">
		<link rel="stylesheet" type="text/css" href="/js/chosen/chosen.min.css">
		<link rel="stylesheet" type="text/css" href="css/fonts/graphsnap/style.css" />
		<link rel="stylesheet" type="text/css" href="/css/global.css">

	</head>
	<body onload="app.init()">

		{{#if error}}
			<p>{{error}}</p>
		{{/if}}

		{{#if user}}

		<!-- Sidebar -->
		<nav id="sidebar" class="sidebar">
      <div class="user-info user-info-sidebar">
        <img class="person" src="http://placehold.it/100x100" alt=""/>
        <h3 class="user-name">Jordan Foreman</h3>
      </div>

      <div class="nav-section">
        <h3>Main</h3>
        <ul class="nav nav-sidebar">
          <li><a href="/"><i class="icon-home"></i> Home</a></li>
          <li><a href="/Charts"><i class="icon-file"></i> Reports</a></li>
          <li><a href="/Products"><i class="icon-drawer"></i> Data</a></li>
          <li><a href="/ProductType"><i class="icon-stack"></i> Profiles</a></li>
          <li><a href="/Settings"><i class="icon-cog"></i> Settings</a></li>
        </ul>
      </div>

      <div class="nav-section">
        <h3>Admin</h3>
        <ul class="nav nav-sidebar">
          <li><a href="#"><i class="icon-office"></i> Company</a></li>
          <li><a href="#"><i class="icon-users"></i> Users</a></li>
          <li><a href="#"><i class="icon-mail"></i> Correspondence</a></li>
        </ul>
      </div>
    </nav>

		<header id="main-header">
      <a href="#" id="menuToggle" class="pull-left" onclick="UI.toggleSidebar();"><i class="icon-menu"></i></a>

      <nav id="nav-header" class="nav-header pull-right">
        <ul class="nav nav-header">
					<li><a href="/"><i class="icon-home"></i></a></li>
          <li><a href="#"><i class="icon-user"></i></a></li>
          <li><a href="#"><i class="icon-bullhorn"></i></a></li>
        </ul>
      </nav>
    </header>

		{{/if}}

		<div class="container {{#if user}}loggedIn{{/if}}">

		{{{body}}}

		</div>

		<!-- Scripts -->
		<script type="text/javascript" src="js/graphsnap.js"></script>
		<script type="text/javascript" src="/js/chosen/chosen.jquery.min.js"></script>
		<script type="text/javascript" src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
		<script type="text/javascript" src="/js/app.js"></script>

	</body>
</html>
