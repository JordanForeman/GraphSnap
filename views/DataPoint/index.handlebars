<h2>Data Profiles <a href="Profile/CreateNew" class="btn btn-small btn-gray">Create New</a></h2>
{{#if profiles}}
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Num. Identifiers</th>
				<th>&nbsp;</th>
				<th>&nbsp;</th>
			</tr>
		</thead>
		<tbody>
			{{#each profiles}}
			<tr>
				<td><a href="ProductType/{{_id}}">{{name}}</a></td>
				<td>{{ customIdentifiers.length }}</td>
				<td><a class="btn btn-green" href="DataPoint/CreateNew/{{_id}}">Add Data Point</a></td>
				<td><a class="btn btn-gray" href="Profile/AddIdentifier/{{_id}}">Add Identifier</a></td>
			</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
<p>No Profiles found - <a href="Profile/CreateNew">Create A Profile</a></p>
{{/if}}

<hr>

<h2>Data Points <a class="btn btn-small btn-gray" href="DataPoint/CreateNew">Create New</a></h2>
{{#if dataPoints }}
	{{#each dataPoints}}
	<h4>{{profile.name}}</h4>
	<table>
		{{#if profile.customIdentifiers}}
		<thead>
			<tr>
				{{#each profile.customIdentifiers}}
				<th>{{this}}</th>
				{{/each}}
			</tr>
		</thead>
		{{/if}}

		<tbody>
			<tr data-id="{{_id}}">
				{{#each customIdentifiers}}
				<td>{{this}}</td>
				{{/each}}
			</tr>
		</tbody>
	</table>
	{{/each}}
{{else}}
<p>No Data Points found - <a href="DataPoint/CreateNew">Create a Data Point</a></p>
{{/if}}
