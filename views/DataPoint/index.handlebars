<h2 class="title">Data Points <a href="/DataPoint/CreateNew" class="btn btn-small pull-right">Create New</a></h2>
{{#if profiles }}
	{{#each profiles}}
	<h4>{{name}}</h4>
	<table class="table">
		<thead>
			<tr>
				<th>Value</th>
				{{#if customIdentifiers}}
				{{#each customIdentifiers}}
				<th>{{this}}</th>
				{{/each}}
				{{/if}}
			</tr>
		</thead>

		<tbody>
			{{#each dataPoints}}
			<tr data-id="{{_id}}">
				<td>{{value}}</td>
				{{#each customIdentifiers}}
				<td>{{this}}</td>
				{{/each}}
			</tr>
			{{/each}}
		</tbody>
	</table>
	<a class="btn btn-small btn-gray" href="DataPoint/CreateNew/{{_id}}">Create New</a>
	{{/each}}
{{else}}
<p>No Data Points found - <a href="DataPoint/CreateNew">Create your first Data Point</a></p>
{{/if}}
