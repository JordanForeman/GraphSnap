<h1>Edit Your Settings</h1>
{{#if user}}

<div class="grid-row">

	<form class="grid-2-3" style="padding: 10px 20px;" id="userSettingsForm" method="POST" action="/settings">
		<input type="hidden" name="uid" value="{{user._id}}" />
		
		<label for="name">Name: 
			<input type="text" placeholder="name" name="name" id="name" {{#if user.name}}value="{{user.name}}"{{/if}} required/>
		</label>
		<br />
		
		<label for="email">Email: 
			<input type="email" placeholder="email" name="email" id="email" {{#if user.email}}value="{{user.email}}"{{/if}} required/>
		</label>
		<br />
		
		<input type="submit" value="Save Settings" />
	</form>

	<form class="grid-1-3 form form-danger" method="POST" action="/settings/changePassword">
		<h3>Change Password</h3>

		<input type="hidden" name="uid" value="{{user._id}}" />

		<label for="oldPass1">Old Password:
		<input type="password" placeholder="Old Password" name="oldPass1" id="oldPass1" required />
		</label>
		<br>

		<label for="oldPass2">Old Password Again:
		<input type="password" placeholder="Old Password" name="oldPass2" id="oldPass2" required />
		</label>
		<br>
		
		<label for="newPass">New Password:
		<input type="password" placeholder="New Password" name="newPass" id="newPass" required />
		</label>
		<br>

		<small style="display: block; text-align: center;">This feature not yet implemented</small>
		{{!-- <input type="submit" value="Change Password" disabled /> --}}
		
	</form>

	{{else}}
	There was an error getting your information. Please <a href="/login">login</a> again.
	{{/if}}

</div>